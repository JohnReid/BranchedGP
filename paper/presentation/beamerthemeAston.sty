% Modify the footline so that it includes the authors, title and page numbers
% This is the page footer in Aston colours
\setbeamertemplate{footline}{%
	\leavevmode%
	\hbox{%
		\begin{beamercolorbox}[wd=.4\paperwidth,ht=2ex,dp=1.125ex,center]{title in head/foot}%
			\usebeamerfont{author in head/foot}\insertshortauthor\hspace{.5cm} % Add the short version of the authors
		\end{beamercolorbox}%
		\begin{beamercolorbox}[wd=.55\paperwidth,ht=2ex,dp=1.125ex,center]{title in head/foot}%
			\usebeamerfont{title in head/foot}\hspace{.5cm}\insertshorttitle % Add the short title
		\end{beamercolorbox}%
		\begin{beamercolorbox}[wd=.05\paperwidth,ht=2ex,dp=1.125ex,center]{title in head/foot}%
			\usebeamerfont{title in head/foot}\hspace{-.3cm}\insertframenumber/\inserttotalframenumber % Add a page number and total
		\end{beamercolorbox}%
	}%
	\vskip0pt%
}

\setbeamertemplate{navigation symbols}{} % suppresses all the annoying navigation symbols

