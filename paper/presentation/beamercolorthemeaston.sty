\mode<presentation>

\definecolor{darkblue}{RGB}{0,60,121} % Aston university colour
\definecolor{astonlightblue}{RGB}{0,120,242} % Aston university colour
\definecolor{astonblue}{RGB}{0,60,121} % Aston university colour
\definecolor{astonpurple}{RGB}{148,40,139} % Aston university colour
\definecolor{astongreen}{RGB}{10,80,20} % Aston university colour
\usecolortheme[RGB={0,60,121}]{structure} % Aston engineering school colour (purple)

%\setbeamercolor{topbar}{parent=section in head/foot,bg=astongreen}
\setbeamercolor{author in head/foot}{parent=section in head/foot,bg=astonlightblue}
\setbeamercolor{section in head/foot}{parent=palette quaternary,bg=darkblue}
\setbeamercolor{title in head/foot}{parent=palette quaternary,bg=darkblue}

\setbeamercolor{block title}{use=structure,fg=white,bg=structure.fg!90!astonblue} % purple block: 90 is the intensity of the colour
\setbeamercolor{block title alerted}{use=alerted text,fg=white,bg=alerted text.fg!75!black}
\setbeamercolor{block title example}{use=example text,fg=white,bg=astonblue}

\setbeamercolor{block body}{parent=normal text,use=block title,bg=block title.bg!10!bg}
\setbeamercolor{block body alerted}{parent=normal text,use=block title alerted,bg=block title alerted.bg!10!bg}
\setbeamercolor{block body example}{parent=normal text,use=block title example,bg=block title example.bg!10!bg}

\mode
<all>
